{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:styles": "node bin/build-tailwind.cjs --watch",
        "dev:scripts": "node bin/build.js --dev",
        "build:styles": "node bin/build-tailwind.cjs && npm run purge",
        "build:scripts": "node bin/build.js",
        "purge": "filament-purge -i resources/dist/cubewikipackage.css -o resources/dist/cubewikipackage.css -v 3.x",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.1",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.19",
        "autoprefixer": "^10.4.22",
        "esbuild": "^0.19.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.6",
        "postcss-import": "^15.1.0",
        "postcss-nesting": "^13.0.2",
        "prettier": "^2.7.1",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "tailwindcss": "^4.0.0"
    }
}
